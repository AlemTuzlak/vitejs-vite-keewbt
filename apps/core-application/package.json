{
	"name": "core-application",
	"private": true,
	"sideEffects": false,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"execute": "node --no-warnings --experimental-specifier-resolution=node --loader ./scripts/loader.js",
		"script": "pnpm run execute scripts/setup.ts",
		"icons": "pnpm run script scripts/icons.ts",
		"build": "remix vite:build",
		"dev": "remix vite:dev",
		"start": "remix-serve ./build/server/index.js",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:ui": "vitest --ui --open",
		"test:coverage": "vitest run --coverage",
		"e2e": "playwright test",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@remix-run/node": "^2.9.2",
		"@remix-run/react": "^2.9.2",
		"@remix-run/serve": "^2.9.2",
		"@remix-run/web-fetch": "^4.4.2",
		"clsx": "^2.1.1",
		"i18next": "^23.11.5",
		"i18next-browser-languagedetector": "^7.2.1",
		"i18next-fs-backend": "^2.3.1",
		"i18next-http-backend": "^2.5.2",
		"isbot": "^5.1.8",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-i18next": "^14.1.2",
		"remix-custom-routes": "^1.0.1",
		"remix-i18next": "^6.1.0",
		"tailwind-merge": "^2.3.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.44.1",
		"@remix-run/dev": "^2.9.2",
		"@types/node": "^20.14.2",
		"@types/prompt": "^1.1.8",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitest/coverage-v8": "^1.6.0",
		"@vitest/ui": "^1.6.0",
		"autoprefixer": "^10.4.19",
		"chalk": "^5.3.0",
		"dotenv": "^16.4.5",
		"glob": "^10.4.1",
		"happy-dom": "^14.12.0",
		"postcss": "^8.4.38",
		"prompt": "^1.3.0",
		"remix-development-tools": "^4.1.6",
		"tailwindcss": "^3.4.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.5",
		"vite": "^5.2.12",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^1.6.0"
	}
}